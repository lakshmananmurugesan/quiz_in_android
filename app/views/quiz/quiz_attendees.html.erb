<h2>Quiz Attendees Form</h2>
<br>
<%= form_for(@quiz_attendees, url: quiz_quiz_attendees_path) do |f| %>
    <% if @quiz_attendees.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@quiz_attendees.errors.count, "error") %> prohibited this question from being saved:</h2>

          <ul>
            <% @quiz_attendees.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :Name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :College_Name %><br />
      <%= f.text_field :college_name %>
    </div>

    <div class="field">
      <%= f.label :Department_Name %><br />
      <%= f.text_field :department %>
    </div>

    <div class="field">
      <%= f.label :Current_Year %><br />
      <%= f.radio_button :current_year, "1" %>
      <%= label :current_year, 'First' %>
      <%= f.radio_button :current_year, "2" %>
      <%= label :current_year, 'Second' %>
      <%= f.radio_button :current_year, "3" %>
      <%= label :current_year, 'Third' %>
      <%= f.radio_button :current_year, "4" %>
      <%= label :current_year, 'Fourth' %>
    </div>

    <div class="field">
      <%= f.label :Passed_Out_Year %><br />
      <%= f.select :year_passed_out, options_for_select([["2008", "2008"],["2009", "2009"],["2010", "2010"],["2011", "2011"],["2012", "2012"],["2013", "2013"],["2014", "2014"],["2015", "2015"],["2016", "2016"],["2017", "2017"],["2018", "2018"]], @quiz_attendees.year_passed_out) %>
    </div>

    <div class="field">
      <%= f.label :Phone_No %><br />
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :Email %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :Current_Location %><br />
      <%= f.text_field :native_place %>
    </div>

    <div class="field">
      <%= f.label :Type_Your_Feedback_here! %><br />
      <%= f.text_area :workshop_feedback, :size => "80x10" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
